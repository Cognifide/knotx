{
  "knotxServer": {
    "config": {
      "http.port": 8092,
      "preserved.headers": [
        "User-Agent",
        "Request Method",
        "X-Solr-Core-Key",
        "X-Language-Code"
      ],
      "dependencies" : {
        "repository.address" : "template-repository",
        "engine.address": "template-engine"
      }
    }
  },
  "repository": {
    "config": {
      "service.name": "template-repository",
      "repositories": [
        {
          "type": "local",
          "path": "/content/local/.*",
          "catalogue": ""
        },
        {
          "type": "remote",
          "path": "/content/.*",
          "domain": "localhost",
          "port": 3001
        }
      ]
    }
  },
  "templateEngine": {
    "config": {
      "service.name": "template-engine",
      "template.debug": true,
      "services": [
        {
          "path": "/service/mock/.*",
          "domain": "localhost",
          "port": 3000
        },
        {
          "path": "/service/.*",
          "domain": "localhost",
          "port": 8080
        }
      ]
    }
  },
  "mockRepo": {
    "mock.data.root": "mock/repository",
    "http.port": 3001
  },
  "mockService": {
    "mock.data.root": "mock/service",
    "http.port": 3000
  }
}