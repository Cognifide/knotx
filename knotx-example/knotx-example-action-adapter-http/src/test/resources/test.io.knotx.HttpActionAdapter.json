{
  "main": "io.knotx.adapter.action.http.HttpActionAdapterVerticle",
  "options": {
    "config": {
      "address": "knotx.adapter.action.http",
      "clientOptions": {
        "maxPoolSize": 1000,
        "setIdleTimeout": 600,
        "tryUseCompression": true
      },
      "services": [
        {
          "path": "/service/mock/.*",
          "domain": "localhost",
          "port": 4000,
          "allowedRequestHeaders": [
            "Content-Type",
            "X-*"
          ]
        },
        {
          "path": "/service/.*",
          "domain": "localhost",
          "port": 8080
        }
      ]
    }
  }
}
