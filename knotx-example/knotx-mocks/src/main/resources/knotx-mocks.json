{
  "verticles": {
    "com.cognifide.knotx.mocks.MockRemoteRepositoryVerticle": {
      "config": {
        "mock.data.root": "mock/repository",
        "http.port": 3001
      }
    },
    "com.cognifide.knotx.mocks.MockServiceVerticle": {
      "config": {
        "mock.data.root": "mock/service",
        "bouncing": true,
        "http.port": 3000
      }
    },
    "com.cognifide.knotx.mocks.MockServiceAdapterVerticle": {
      "config": {
        "address": "mock-adapter-service",
        "mock.data.root": "mock/service"
      }
    },
    "com.cognifide.knotx.mocks.MockKnotVerticle": {
      "config": {
        "handlers": [
          {
            "address": "knot.action",
            "mocks": [
              {
                "request.path": "/form-simple",
                "fragments": "mock/knot/action/form-simple.fragments.json",
                "clientResponse": "mock/knot/action/form-simple.response.json",
                "transition": "view"
              },
              {
                "request.path": "/redirect",
                "clientResponse": "mock/knot/action/redirect.response.json"
              }
            ]
          },
          {
            "address": "knot.view",
            "mocks": [
              {
                "request.path": "/simple",
                "fragments": "mock/knot/view/simple.fragments.json",
                "clientResponse": "mock/knot/view/simple.response.json"
              }
            ]
          }
        ]
      }
    }
  }
}
