{
  "services": [
    "io.knotx.KnotxServer",
    "io.knotx.HttpRepositoryConnector",
    "io.knotx.FilesystemRepositoryConnector",
    "io.knotx.FragmentSplitter",
    "io.knotx.ServiceKnot",
    "io.knotx.ActionKnot",
    "io.knotx.HandlebarsKnot",
    "io.knotx.HttpServiceAdapter"
  ],
  "config": {
    "io.knotx.KnotxServer": {
      "options": {
        "config": {
          "httpPort": 9999,
          "allowedResponseHeaders": [
            "Access-Control-Allow-Origin",
            "Allow",
            "Cache-Control",
            "Content-Disposition",
            "Content-Encoding",
            "Content-Language",
            "Content-Location",
            "Content-MD5",
            "Content-Range",
            "Content-Type",
            "Content-Length",
            "Content-Security-Policy",
            "Date",
            "ETag",
            "Expires",
            "Last-Modified",
            "Location",
            "Pragma",
            "Proxy-Authenticate",
            "Server",
            "Set-Cookie",
            "Status",
            "Vary",
            "Via",
            "X-Frame-Options",
            "X-XSS-Protection",
            "X-Content-Type-Options",
            "X-UA-Compatible",
            "X-Request-ID"
          ]
        }
      },
      "instances": 2
    },
    "io.knotx.ServiceKnot": {
      "options": {
        "config": {
          "services": [
            {
              "name": "mock",
              "address": "mock-service-adapter",
              "config": {
                "path": "/service/mock/.*"
              }
            }
          ]
        }
      }
    }
  }
}

