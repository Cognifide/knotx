{
  "repositories": [
    {
      "path": "/content/.*",
      "address": "knotx.core.repository.http"
    }
  ],
  "splitter": "knotx.core.splitter",
  "routing": {
    "GET": {
      "items": [
        {
          "path": "/content/.*",
          "address": "knotx.knot.action",
          "onTransition": {
            "next": {
              "address": "knotx.knot.service",
              "onTransition": {
                "next": {
                  "address": "knotx.knot.handlebars"
                }
              }
            }
          }
        }
      ]
    }
  },
  "assembler": "knotx.core.assembler"
}
