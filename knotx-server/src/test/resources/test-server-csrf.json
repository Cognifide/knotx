{
  "modules": [
    "java:io.knotx.server.KnotxServerVerticle",
    "java:io.knotx.repository.FilesystemRepositoryConnectorVerticle"
  ],
  "config": {
    "java:io.knotx.repository.FilesystemRepositoryConnectorVerticle": {
      "options": {
        "config": {
          "address": "knotx.repository.filesystem",
          "catalogue": "src/test/resources/"
        }
      }
    },
    "java:io.knotx.server.KnotxServerVerticle": {
      "options": {
        "config": {
          "serverOptions": {
            "port": 9092
          },
          "defaultFlow": {
            "repositories": [
              {
                "path": "/content/.*",
                "address": "knotx.repository.filesystem"
              }
            ],
            "splitter": "test-splitter",
            "routing": {
              "GET": {
                "items": [
                  {
                    "path": ".*",
                    "csrf": true,
                    "address": "some-knot"
                  }
                ]
              },
              "POST": {
                "items": [
                  {
                    "path": "/content/local/simple.*",
                    "csrf": true,
                    "address": "some-knot"
                  },
                  {
                    "path": "/content/local/public.*",
                    "address": "some-knot"
                  }
                ]
              }
            },
            "assembler": "test-assembler"
          }
        }
      }
    }
  }
}
